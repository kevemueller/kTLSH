<project xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>app.keve.ktlsh</groupId>
		<artifactId>ktlsh-parent</artifactId>
		<version>0.0.1-SNAPSHOT</version>
	</parent>

	<artifactId>ktlsh</artifactId>
	<packaging>jar</packaging>

	<name>kTLSH</name>
	<description>A fresh look at implementing TLSH in Java.</description>
	<url>https://ktlsh.keve.app</url>
	<inceptionYear>2020</inceptionYear>

	<licenses>
		<license>
			<name>The Apache License, Version 2.0</name>
			<url>http://www.apache.org/licenses/LICENSE-2.0.txt</url>
		</license>
	</licenses>

	<developers>
		<developer>
			<name>Keve MÃ¼ller</name>
			<email>ktlsh@keve.app</email>
			<organization>Keve</organization>
			<organizationUrl>https://keve.app</organizationUrl>
		</developer>
	</developers>

	<scm>
		<connection>scm:git:git://github.com/kevemueller/kTLSH.git</connection>
		<developerConnection>scm:git:ssh://github.com:kevemueller/kTLSH.git</developerConnection>
		<url>http://github.com/kevemueller/kTLSH/tree/master</url>
	</scm>


	<properties>
		<projectRoot>${basedir}/..</projectRoot>
	</properties>

	<repositories>
		<repository>
			<id>jcenter</id>
			<url>https://jcenter.bintray.com/</url>
		</repository>
	</repositories>

	<dependencies>
		<dependency>
			<groupId>com.trendmicro</groupId>
			<artifactId>tlsh</artifactId>
			<version>3.7.1</version>
		</dependency>
		<dependency>
			<groupId>org.junit.jupiter</groupId>
			<artifactId>junit-jupiter</artifactId>
		</dependency>
	</dependencies>
	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-jar-plugin</artifactId>
				<executions>
					<execution>
						<goals>
							<goal>test-jar</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
		</plugins>
		<testResources>
			<testResource>
				<directory>src/test/resources</directory>
				<includes>
					<include>
					tlsh/Testing/**
					</include>
				</includes>
				<filtering>false</filtering>
			</testResource>
		</testResources>
	</build>
</project>